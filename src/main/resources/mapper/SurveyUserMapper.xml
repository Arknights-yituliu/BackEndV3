<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lhs.mapper.survey.SurveyUserMapper">

    <insert id="save">
        INSERT INTO survey_user
        (`id`,`pass_word`,`uid`,`user_name`,`create_time`,`update_time`,`ip`,`status`,`email`,`avatar`)
        VALUES
       (#{item.id},#{item.passWord},#{item.uid},#{item.userName},#{item.createTime},
        #{item.updateTime},#{item.ip},#{item.status},#{item.email},#{item.avatar})
    </insert>

    <update id="updateUserById">
        UPDATE survey_user
        SET
            `pass_word`   = #{item.passWord},
            `uid`         = #{item.uid},
            `user_name`   = #{item.userName},
            `update_time` = #{item.updateTime},
            `status`      = #{item.status},
            `email`       = #{item.email},
            `avatar`      = #{item.avatar}
            WHERE
            id = #{item.id}
    </update>


</mapper>